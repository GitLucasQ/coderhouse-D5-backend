html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css")
        title="Lista de productos | PUG"
    body
        div.container
            div.row.justify-content-md-center.m-5
                div.col-md-6
                    div.row.justify-content-md-center.m-4
                        h2.font-weight-bold.text-primary="Lista de productos"
                    div.row.justify-content-md-center
                        if data.length === 0                        
                            p.text-danger.text-center="No hay productos"
                        else
                            table.table.table-stripped.table-dark
                                thead.thead-dark
                                    tr
                                        th="Nombre"
                                        th="Precio"
                                        th="Foto"
                                tbody
                                    each producto in data
                                        tr
                                            td=producto.title
                                            td="$"+producto.price
                                            td
                                                img(src=producto.thumbnail width="40px")
                    div.row.justify-content-md-center
                        a.btn.btn-primary(type="button" href="/nuevoProducto")="Agregar nuevo producto"