html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css")
        title="Ingreso de nuevos productos"
    body 
        div.container
            div.row.justify-content-md-center.m-5
                div.col-md-auto
                    div.row
                        h2.font-weight-bold="Ingrese un nuevo producto | PUG"
                    form(action="/productos" method="POST")
                        div.form-group
                            label="Nombre"
                            input.form-control(type="text" placeholder="Nombre del producto" name="title")
                        div.form-group
                            label="Precio"
                            input.form-control(type="number" min=0 name="price")
                        div.form-group
                            label="Foto del producto"
                            input.form-control(type="text" placeholder="Foto" name="thumbnail")
                        button.btn.btn-success(type="submit")="Enviar"                      
